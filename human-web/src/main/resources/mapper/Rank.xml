<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.civil.aviation.human.database.mapper.RankMapper">

    <!--定义数据表列字段-->
    <sql id="sqlColumn">
        id, name, createTime, memo
    </sql>

    <!--添加员工-->
    <insert id="add" parameterType="Rank">
        INSERT INTO
        T_RANK(<include refid="sqlColumn"/>)
        VALUES
        (#{id}, #{name}, NOW(), #{memo})
    </insert>

    <!--修改员工-->
    <update id="modify" parameterType="Rank">
        UPDATE T_RANK
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="memo != null">
                memo = #{memo}
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <!--删除员工-->
    <delete id="delete" parameterType="Integer">
        DELETE FROM T_RANK WHERE id=#{rankId}
    </delete>

    <!--根据编号查询职级信息-->
    <select id="findById" parameterType="Integer" resultType="Rank">
        SELECT
        <include refid="sqlColumn"/>
        FROM T_RANK WHERE id=#{rankId}
    </select>

    <!--查询员工信息-->
    <select id="findByCondition" parameterType="Map" resultType="Rank">
        SELECT
        <include refid="sqlColumn"/>
        FROM T_RANK WHERE 1=1
        <if test="name != NULL">
            AND name = #{name}
        </if>
        <if test="pageIndex != NULL and pageSize != NULL ">
            limit ${pageIndex}, ${pageSize}
        </if>
    </select>

    <select id="findCountByCondition" parameterType="Map" resultType="Integer">
        SELECT COUNT(1)
        FROM T_RANK WHERE 1=1
        <if test="name != NULL">
            AND name = #{name}
        </if>
    </select>

</mapper>